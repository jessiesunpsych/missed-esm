esm <- read.csv('/Users/Sean/Downloads/missed-esm-27ac122e5bf9c7bcd0d565a9ff7301d474ef9f3d/missingRowsData.csv',stringsAsFactors=FALSE)
require(plyr); require(dplyr); require(reshape2)


# You had one duplicate observation within a specific time period that would break the melt so this removes both rows
esm <- group_by(esm, esm.IDnum.w1, esm.fileDate.w1, esm.PRO03.w1) %>%
  filter(n() < 2)
  
# Casting the data automatically fills in NAs where you want them
esm <- dcast(esm, ... ~ esm.PRO03.w1)
# Melting it back into original shape
esm <- melt(esm, id.vars = 1:2, na.rm = FALSE, value.name = 'esm.PRO02.w1', variable = 'esm.PRO03.w1')

esm <- arrange(esm, esm.IDnum.w1, esm.fileDate.w1, variable)
